@model IEnumerable<Preacepta.Modelos.AbstraccionesFrond.CasosTipoDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Tipo de Caso</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear un nuevo tipo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@item.IdTipoCaso" class="btn btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.IdTipoCaso" class="btn btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.IdTipoCaso" class="btn btn-danger">Eliminar</a>
                <div/>
            </td>
        </tr>
}
    </tbody>
</table>
