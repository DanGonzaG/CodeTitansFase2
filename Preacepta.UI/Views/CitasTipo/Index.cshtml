@model IEnumerable<Preacepta.Modelos.AbstraccionesFrond.CitasTipoDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h2>Listado de Tipos de Cita</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No hay tipos de cita registrados.</td>
            </tr>
        }
    </tbody>
</table>