@model Preacepta.Modelos.AbstraccionesFrond.PersonaUnionAbogado

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<h1>Registrar un nuevo Abogado</h1>

<h4>Modulo de Abogado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="geAbogadoDTO.Carnet" class="control-label"></label>
                <input asp-for="geAbogadoDTO.Carnet" class="form-control" />
                <span asp-validation-for="geAbogadoDTO.Carnet" class="text-danger"></span>
            </div>
            <!--<div class="form-group">
                <label asp-for="geAbogadoDTO.Cedula" class="control-label"></label>
