<!-- Modal -->
<div class="modal fade" id="PrevioModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Revisión de datos ingresados</h5>
                <button id="Retroceso2" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p style="color: black"><strong>Tipo Caso:</strong> <span id="previoTipoCaso"></span></p>
                <p style="color: black"><strong>Nombre del caso:</strong> <span id="previotitulo"></span></p>
                <p style="color: black"><strong>Pruebas Iniciales:</strong> <span id="previoPruebas"></span></p>
                <p style="color: black"><strong>Cliente:</strong> <span id="previoCliente"></span></p>
                <p style="color: black"><strong>Detalles del Caso:</strong> <span id="previoDescripcion"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="contact-btn" data-bs-dismiss="modal" id="Retroceso">Hacer Cambios</button>
                <button type="button" id="BtnConfirmar" class="contact-btn">Confirmar datos</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

