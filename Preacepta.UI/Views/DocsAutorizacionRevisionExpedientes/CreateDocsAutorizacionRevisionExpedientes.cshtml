@model Preacepta.Modelos.AbstraccionesFrond.DocsAutorizacionRevisionExpedienteDTO

<head>
    <link href="~/lyso/css/Daniel.css" rel="stylesheet" />
</head>
<body>
<!-- Page Title -->
<div class="page-title-area page-title-area-two title-img-one">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="page-title-text">
                <h2>Generador de Documentos Legales</h2>
                <ul>
                    <li>
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li>
                        <i class="icofont-simple-right"></i>
                    </li>
                    <li>Autorización de Revisión de Expedientes</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Page Title -->

<br />
<br />
<br />

<div class="contact-form contact-form-two contact-form-three">
    <div class="container">
        <div class="contact-wrap">
            <form asp-action="CreateDocsAutorizacionRevisionExpedientes" id="CreateDocsAutorizacionRevisionExpedientes">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row justify-content-center">
                    <div class="col-sm-6 col-lg-6">
                        <div class="form-group">
                            <label asp-for="Expediente" class="control-label"></label>
                            <input asp-for="Expediente" class="form-control" id="idExpediente"/>
                            <span asp-validation-for="Expediente" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-6">
                        <div class="form-group">
                            <label asp-for="Delito" class="control-label"></label>
                                <input asp-for="Delito" class="form-control" id="idDelito" lang="es" spellcheck="true"  />
                            <span asp-validation-for="Delito" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-6">
                        <div class="form-group">
                            <label asp-for="CedulaImputado" class="control-label"></label>
                            <select asp-for="CedulaImputado" class="form-control" asp-items="ViewBag.CedulaImputado" id="idCedulaImputado"></select>
                        </div>
                    </div>
          
                    <div class="col-sm-6 col-lg-6">
                        <div class="form-group">
                            <label asp-for="Ofendido" class="control-label"></label>
                                <input asp-for="Ofendido" class="form-control" id="idOfendido" lang="es" spellcheck="true" />
                            <span asp-validation-for="Ofendido" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-6">
                        <div class="form-group">
                            <label asp-for="CedulaAbogado" class="control-label"></label>
                            <select asp-for="CedulaAbogado" class="form-control" asp-items="ViewBag.CedulaAbogado" id="idCedulaAbogado"></select>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-6">
                        <div class="form-group">
                            <label asp-for="CedulaAsistente" class="control-label"></label>
                            <select asp-for="CedulaAsistente" class="form-control" asp-items="ViewBag.CedulaAsistente" id="idCedulaAsistente"></select>
                        </div>
                    </div>

                    <br />
                    <br />
                    <br />

                        <div class="col-md-12 col-lg-12">
                            <div class="text-center d-flex justify-content-center gap-3">
                                <div class="form-group" id="btnCrearCaso">
                                    <input type="submit" value="Crear Documento" class="contact-btn" />
                                </div>
                                <div class="form-group">
                                    <button type="button" id="btnPrevisualizar" class="contact-btn">
                                        Previsualizar PDF
                                    </button>
                                </div>
                            </div>
                        </div>
                </div>
            </form>
        </div>
    </div>
</div>
</body>





<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="PrevioModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Revisión de datos ingresados</h5>
                <button id="Retroceso2" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p style="color: black"><strong>Expediente:</strong> <span id="previoExpediente"></span></p>
                <p style="color: black"><strong>Delito:</strong> <span id="previoDelito"></span></p>
                <p style="color: black"><strong>Cedula del imputado:</strong> <span id="previoCedulaImputado"></span></p>
                <p style="color: black"><strong>Nombre del ofendido:</strong> <span id="previoOfendido"></span></p>
                <p style="color: black"><strong>Cedula del abogado:</strong> <span id="previoCedulaAbogado"></span></p>
                <p style="color: black"><strong>Cedula del asistente legal:</strong> <span id="previoCedulaAsistente"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="contact-btn" data-bs-dismiss="modal" id="Retroceso">Hacer Cambios</button>
                <button type="button" id="BtnConfirmar" class="contact-btn">Confirmar datos</button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="~/lyso/js/docsPrueba.js"></script>