@model Preacepta.Modelos.AbstraccionesFrond.CitasDTO

@{
    ViewData["Title"] = "Eliminar Cita";
    Layout = "_Layout";
}

<h2>¿Estás seguro de que deseas eliminar esta cita?</h2>

<div>
    <h4>Detalles de la Cita</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.IdCita</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha</dd>

        <dt class="col-sm-2">Hora</dt>
        <dd class="col-sm-10">@Model.Hora</dd>

        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.NombreTipoCita</dd>

        <dt class="col-sm-2">Link</dt>
        <dd class="col-sm-10">@Model.LinkVideo</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdCita" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="CitasPrueba" class="btn btn-secondary">Cancelar</a>
</form>
