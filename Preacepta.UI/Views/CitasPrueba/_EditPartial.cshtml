@model Preacepta.Modelos.AbstraccionesFrond.CitasDTO

@{
    ViewData["Title"] = "Editar Cita";
    Layout = null; // Ideal si esto se carga en un modal por AJAX
}

<form asp-controller="Citas" asp-action="Edit" method="post" id="formEditarCita">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdCita" />

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="form-group mb-3">
        <label asp-for="Fecha" class="form-label"></label>
        <input asp-for="Fecha" type="date" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Hora" class="form-label"></label>
        <input asp-for="Hora" type="time" class="form-control" />
        <span asp-validation-for="Hora" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="IdTipoCita" class="form-label">Tipo de Cita:</label>
        <select asp-for="IdTipoCita" class="form-control" asp-items="ViewBag.TipoCitaList">
            <option value="">-- Seleccione Tipo de Cita --</option>
        </select>
        <span asp-validation-for="IdTipoCita" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="NombreAnfitrion" class="form-label">Anfitrión</label>
        <input asp-for="NombreAnfitrion" class="form-control" readonly />
        <input type="hidden" asp-for="Anfitrion" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="LinkVideo" class="form-label"></label>
        <input asp-for="LinkVideo" class="form-control" />
        <span asp-validation-for="LinkVideo" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-end gap-2 mt-4">
        <input type="submit" value="Guardar" class="btn btn-gold" />
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
    </div>
</form>
<style>
.btn-gold {
    background-color: #c59d5f;
    color: white;
    border: none;
}
.btn-gold:hover {
    background-color: #b48b4e;
    color: white;
}
</style>