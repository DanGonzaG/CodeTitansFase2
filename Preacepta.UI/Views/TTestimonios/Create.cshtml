@model Preacepta.Modelos.AbstraccionesFrond.TTestimonioDTO

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<h1>Create</h1>

<h4>TTestimonio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Campo Fecha (oculto, valor automático) -->
            <input type="hidden" asp-for="Fecha" value="@DateTime.Now.ToString("yyyy-MM-dd")" />

            <!-- Campo IdCliente (oculto, valor fijo = 1) -->
            <input type="hidden" asp-for="IdCliente" value="1" />

            <!-- Campo Activo (oculto, siempre true) -->
            <input type="hidden" asp-for="Activo" value="true" />

            <!-- Campos editables por el usuario -->
            <div class="form-group">
                <label asp-for="Comentario" class="control-label"></label>
                <input asp-for="Comentario" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evaluacion" class="control-label"></label>
                <input asp-for="Evaluacion" class="form-control" />
                <span asp-validation-for="Evaluacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
