@model Preacepta.Modelos.AbstraccionesFrond.TTestimonioDTO

<!-- Page Title -->
<head>
    <link href="~/lyso/css/daniel.css" rel="stylesheet" />
</head>
<div class="page-title-area page-title-area-two title-img-one">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="page-title-text">
                <h2>Su testimonio</h2>
                <h3 style="color:white">Agradecemos su visita. Sus comentarios son valiosos para nosotros.</h3>
                <ul>
                    <li>
                        <a href="index.html">Home</a>
                    </li>
                    <li>
                        <i class="icofont-simple-right"></i>
                    </li>
                    <li>Su testimonio</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<!-- End Page Title -->
<!-- Contact Form -->
<div class="contact-form contact-form-four pb-100">
    <div class="container-fluid">
        <form asp-action="TestimonialForm" method="post" id="contactForm">
            @Html.AntiForgeryToken()

            <!-- Campos ocultos para los datos que ya tienes en el controlador -->
            <input type="hidden" asp-for="IdCliente" />
            <input type="hidden" asp-for="Fecha" />
            <input type="hidden" asp-for="Activo" />

            <div class="row contact-wrap">
                <div class="col-sm-6 col-lg-6">
                    <div class="form-group">
                        <!-- Mostrar el nombre del cliente en lugar de un input editable -->
                        <input type="text" class="form-control" value="@Model?.IdClienteNavigation?.Nombre" readonly placeholder="Nombre completo">
                        <div class="help-block with-errors"></div>
                    </div>
                </div>

                <div class="col-sm-6 col-lg-6">
                    <div class="form-group">
                        <!-- Mostrar la cédula del cliente -->
                        <input type="text" class="form-control" value="@Model?.IdClienteNavigation?.Cedula" readonly placeholder="Identificación">
                        <div class="help-block with-errors"></div>
                    </div>
                </div>

                <div class="col-md-12 col-lg-12">
                    <div class="form-group">
                        <!-- Campo para el comentario (mapeado al DTO) -->
                        <textarea asp-for="Comentario" class="form-control" cols="30" rows="8" required data-error="Por favor ingrese el dato" placeholder="Su testimonio o comentario"></textarea>
                        <span asp-validation-for="Comentario" class="text-danger"></span>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>

                <div class="col-md-12 col-lg-12">
                    <div class="form-group">
                        <p class="clasificacion">
                            <!-- Radio buttons para la evaluación (mapeado al DTO) -->
                            <input class="InputCalficacion" id="radio1" type="radio" asp-for="Evaluacion" value="5">
                            <label class="LabelCalificacion" for="radio1">★</label>

                            <input class="InputCalficacion" id="radio2" type="radio" asp-for="Evaluacion" value="4">
                            <label class="LabelCalificacion" for="radio2">★</label>

                            <input class="InputCalficacion" id="radio3" type="radio" asp-for="Evaluacion" value="3">
                            <label class="LabelCalificacion" for="radio3">★</label>

                            <input class="InputCalficacion" id="radio4" type="radio" asp-for="Evaluacion" value="2">
                            <label class="LabelCalificacion" for="radio4">★</label>

                            <input class="InputCalficacion" id="radio5" type="radio" asp-for="Evaluacion" value="1">
                            <label class="LabelCalificacion" for="radio5">★</label>
                        </p>
                        <span asp-validation-for="Evaluacion" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-check agree-label">
                        <input name="gridCheck"
                               class="form-check-input"
                               type="checkbox"
                               id="gridCheck"
                               required>
                        <label class="form-check-label" for="gridCheck">
                            Acepta <a href="terms-condition.html">Terminos y Condiciones</a> & <a href="privacy-policy.html"> Politica de privacidad.</a>
                        </label>
                        <div class="help-block with-errors gridCheck-error"></div>
                    </div>
                </div>

                <div class="col-md-12 col-lg-12">
                    <div class="text-center">
                        <button type="submit" class="contact-btn">Enviar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- End Contact Form -->
<!-- Agrega esta sección para habilitar la validación del lado del cliente -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}