@model IEnumerable<Preacepta.Modelos.AbstraccionesFrond.GePersonaDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<head>
    <!--<link href="~/lyso/css/style.css" rel="stylesheet" />-->
</head>

<h1>Personas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Persona</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                Nombre completo
            </th>
              
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoCivil)
            </th>                 
            <th style="min-width: 120px; text-align: center; vertical-align: middle;">
                @Html.DisplayNameFor(model => model.Telefono1)
            </th>
            <th style="min-width: 120px; text-align: center; vertical-align: middle;">
                @Html.DisplayNameFor(model => model.Telefono2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion1Navigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cedula)
                </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.Apellido1) @Html.DisplayFor(modelItem => item.Apellido2)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoCivil)
            </td>
            <td style="min-width: 120px; text-align: center; vertical-align: middle;">
                @Html.DisplayFor(modelItem => item.Telefono1)
            </td>
            <td style="min-width: 120px; text-align: center; vertical-align: middle;">
                @Html.DisplayFor(modelItem => item.Telefono2)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion1Navigation.NombreDistrito)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activo)
                </td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.Cedula" class="btn btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Cedula" class="btn btn-info">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Cedula" class="btn btn-danger">Eliminar</a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
