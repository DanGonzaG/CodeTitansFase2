@model Preacepta.Modelos.AbstraccionesFrond.GePersonaDTO

<head>
    <link href="~/lyso/css/Daniel.css" rel="stylesheet" />   
</head>
<!-- Page Title -->
<body>
    <div class="page-title-area page-title-area-two title-img-one">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="page-title-text">
                    <h2>Registrar Nuevo Cliente</h2>
                    <ul>
                        <li>
                            <a asp-controller="Home" asp-action="Index">Página Principal</a>
                        </li>
                        <li>
                            <i class="icofont-simple-right"></i>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="UsuarioAutenticado" asp-route-correo=@User.Identity.Name>PreaceptaApp</a>
                        </li>
                        <li>
                            <i class="icofont-simple-right"></i>
                        </li>
                        <li>Crear Cliente</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page Title -->

    <br />
    <br />
    <br />


    <div class="contact-form contact-form-two contact-form-three">
        <div class="container">
            <div class="col-md-12 col-lg-12 encabezadoForm">
                <img src="~/lyso/img/iconoPersona.png" width="200px"/>
            </div>
            <div class="contact-wrap">
                <form asp-action="CrearPersona">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h2>Formulario para crear cliente</h2>
                    <div class="row justify-content-center">
                        <div class="seccion-titulo">Información del personal</div>
                        <div class="col-sm-6 col-lg-6 centro">
                            <div class="form-group">
                                <label asp-for="Cedula" class="control-label"></label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <input type="number" asp-for="Cedula" class="form-control" />
                                <span asp-validation-for="Cedula" class="text-danger"></span>
                                @if (TempData["ErrorCedula"] != null)
                                {
                                    <span class="text-danger">@TempData["ErrorCedula"]</span>
                                }
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6 centro">
                            <div class="form-group">
                                <label asp-for="Nombre" class="control-label"></label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6 centro">
                            <div class="form-group">
                                <label asp-for="Apellido1" class="control-label"></label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <input asp-for="Apellido1" class="form-control" />
                                <span asp-validation-for="Apellido1" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6 centro">
                            <div class="form-group">
                                <label asp-for="Apellido2" class="control-label"></label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <input asp-for="Apellido2" class="form-control" />
                                <span asp-validation-for="Apellido2" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6 centro">
                            <div class="form-group">
                                <label asp-for="FechaNacimiento" class="control-label"></label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-3">
                            <div class="form-group">
                                <input id="InputFechaNacimiento" type="date" asp-for="FechaNacimiento" class="form-control" />
                                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-1 centro" style="text-align:center">
                            <div class="form-group">
                                <label asp-for="Edad" class="control-label"></label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-2">
                            <div class="form-group">
                                <input id="InputEdad" asp-for="Edad" class="form-control" readonly />
                                <span asp-validation-for="Edad" class="text-danger"></span>
                            </div>
                        </div>
                    
                        <div class="col-sm-6 col-lg-6 centro">
                            <div class="form-group">
                                <label asp-for="Genero" class="control-label"></label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                 <select asp-for="Genero" class="form-control" asp-items="ViewBag.Genero"></select>
                                <span asp-validation-for="Genero" class="text-danger"></span>
                            </div>
                        </div>
                            <br />
                        <br />
                        <br />
                        <br />
                        <div class="col-sm-6 col-lg-6 centro">
                            <div class="form-group">
                                <label asp-for="Oficio" class="control-label"></label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <input asp-for="Oficio" class="form-control" />
                                <span asp-validation-for="Oficio" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6 centro">
                            <div class="LetraNegra">
                                <label asp-for="EstadoCivil" class="control-label"></label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <select asp-for="EstadoCivil" asp-items="ViewBag.EstadoCivil" class="form-control"></select>
                                <span asp-validation-for="EstadoCivil" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="seccion-titulo">Información del Dirreción</div>
                        <div class="col-sm-6 col-lg-6 centro">
                            <div class="form-group">
                                <label for="provincia">Provincia:</label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <select class="selectDaniel" id="provincia" name="provincia">
                                    <option value="">Seleccione una provincia</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6 centro">
                            <div class="form-group">
                                <label for="canton">Cantón:</label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <select class="selectDaniel" id="canton" name="canton" disabled>
                                    <option value="">Seleccione un cantón</option>
                                </select>
                                <input id="inputCanton" asp-for="Direccion1" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6 centro">
                            <div class="form-group">
                                <label for="distrito">Distrito:</label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <select class="selectDaniel" id="distrito" name="Direccion1" asp-for="Direccion1" disabled>
                                    <option value="">Seleccione un distrito</option>
                                </select>
                                <input id="inputDistrito" name="Direccion1" asp-for="Direccion1" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6 centro">
                            <div class="form-group">
                                <label asp-for="Direccion2" class="control-label"></label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <textarea asp-for="Direccion2" class="form-control" cols="6"></textarea>
                                <span asp-validation-for="Direccion2" class="text-danger"></span>
                            </div>
                        </div>                        
                        <div class="seccion-titulo">Contactos</div>
                        <div class="col-sm-6 col-lg-6 centro">
                            <div class="form-group">
                                <label asp-for="Telefono1" class="control-label"></label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <input asp-for="Telefono1" class="form-control" />
                                <span asp-validation-for="Telefono1" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6 centro">
                            <div class="form-group">
                                <label asp-for="Telefono2" class="control-label"></label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <input asp-for="Telefono2" class="form-control" />
                                <span asp-validation-for="Telefono2" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="seccion-titulo">Autenticacion para el sistema</div>
                        <div class="col-sm-6 col-lg-6 centro">
                            <div class="form-group">
                                <label asp-for="Email">Correro electrónico</label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nombre@ejemplo.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                                @if (TempData["ErrorEmail"] != null)
                                {
                                    <span class="text-danger">@TempData["ErrorEmail"]</span>
                                }
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6 centro">
                            <!--<div class="form-floating mb-3">-->
                            <div class="form-group">
                                <label asp-for="Password">Contraseña</label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="ej. 123Abd$" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6 centro">
                            <!--<div class="form-floating mb-3">-->
                            <div class="form-group">
                                <label asp-for="ConfirmPassword">Confirmación de contraseña</label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="ej. 123Abd$" />
                                <span asp-validation-for=ConfirmPassword class="text-danger"></span>
                            </div>
                        </div>                     
                        <div class="col-md-12 col-lg-12" style="margin-top: 100px">
                            <div class="text-center">
                                <div class="form-group">
                                    <input type="submit" value="Crear" class="contact-btn" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="~/lyso/js/calculoedad.js"></script>
<script src="~/lyso/js/filtroprovinicacantondistrito.js"></script>








