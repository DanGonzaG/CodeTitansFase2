                                <span asp-validation-for="NaturalezaFinca" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label asp-for="DistritoFinca" class="control-label"></label>
                                <select asp-for="DistritoFinca" class="form-control" asp-items="ViewBag.DistritoFinca" id="idDistritoFinca"></select>
                            </div>
                        </div>
                        <br />
                        <br />
                        <br />
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label asp-for="CantonFinca" class="control-label"></label>
                                <select asp-for="CantonFinca" class="form-control" asp-items="ViewBag.CantonesFinca" id="idCantonFinca"></select>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label asp-for="ProvinciaFinca" class="control-label"></label>
                                <select asp-for="ProvinciaFinca" class="form-control" asp-items="ViewBag.ProvinciaFinca" id="idProvinciaFinca"></select>
                                <span asp-validation-for="ProvinciaFinca" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label asp-for="AreaFincaM2" class="control-label"></label>
                                <input asp-for="AreaFincaM2" class="form-control" id="idAreaFincaM2" />
