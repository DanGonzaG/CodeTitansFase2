                                <span asp-validation-for="MedioPago" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label asp-for="OrigenFondos" class="control-label"></label>
                                <input asp-for="OrigenFondos" class="form-control" id="idOrigenFondos" />
                                <span asp-validation-for="OrigenFondos" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label asp-for="LugarFirma" class="control-label"></label>
                                <select asp-for="LugarFirma" class="form-control" asp-items="ViewBag.LugarFirma" id="idLugarFirma"></select>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label asp-for="HoraFirma" class="control-label"></label>
                                <input asp-for="HoraFirma" class="form-control" id="idHoraFirma" />
                                <span asp-validation-for="HoraFirma" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label asp-for="FechaFirma" class="control-label"></label>
                                <input asp-for="FechaFirma" class="form-control" id="idFechaFirma" />
                                <span asp-validation-for="FechaFirma" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-12 col-lg-12">

                            <div class="text-center">
                                <!-- Button trigger modal -->
                                <div id="btnRevisar">
                                    <button type="button" id="PrevioBtn" class="contact-btn" data-bs-toggle="modal" data-bs-target="#PrevioModal">
                                        Revisar
                                    </button>
                                </div>
                                <div class="form-group" id="btnCrearCaso">
                                    <input type="submit" value="Crear Documento" class="contact-btn" />
                                </div>
                                <!--<button type="submit" class="contact-btn">Submit Case</button>-->
                            </div>
                        </div>
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>


<!-- Button trigger modal -->
