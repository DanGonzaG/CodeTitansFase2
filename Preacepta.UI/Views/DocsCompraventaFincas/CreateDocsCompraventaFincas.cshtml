<body>
    <div class="contact-form contact-form-two contact-form-three">
        <div class="container">
            <div class="contact-wrap">
                <form asp-action="CreateDocsCompraventaFincas" id="CreateDocsCompraventaFincas">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h2>Formulario para caso nuevo</h2>
                    <div class="row justify-content-center">
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label asp-for="NumeroEscritura" class="control-label"></label>
                                <input asp-for="NumeroEscritura" class="form-control" id="idNumeroEscritura" />
