                                <span asp-validation-for="PlanoCatastrado" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label asp-for="ColindaNorte" class="control-label"></label>
                                <input asp-for="ColindaNorte" class="form-control" id="idColindaNorte" />
                                <span asp-validation-for="ColindaNorte" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label asp-for="ColindaSur" class="control-label"></label>
                                <input asp-for="ColindaSur" class="form-control" id="idColindaSur" />
                                <span asp-validation-for="ColindaSur" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label asp-for="ColindaEste" class="control-label"></label>
                                <input asp-for="ColindaEste" class="form-control" id="idColindaEste" />
                                <span asp-validation-for="ColindaEste" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label asp-for="ColindaOeste" class="control-label"></label>
                                <input asp-for="ColindaOeste" class="form-control" id="idColindaOeste" />
                                <span asp-validation-for="ColindaOeste" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
