@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "_LayoutLysoIdentiy";
}

<!-- Page Title -->
<div class="page-title-area page-title-area-three title-img-one">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="page-title-text">
                <h2>Olvido de contraseña</h2>
                <ul>
                    <li>
                        <a asp-action="Index">Home</a>

                    </li>
                   
                    <li>
                        <i class="icofont-simple-right"></i>
                    </li>
                    <li>Olvido de contraseña</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Page Title -->

<br />
<br />
<div class="MarcoIdentiy">
    <div class="contact-form contact-form-two contact-form-three">
        <div class="container">
            <div class="contact-wrap">
               
                <h2>Ingrese su correo</h2>
                <hr />
                <form class="LetraNegra" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">Correro Electrónico</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                    <button type="submit" class="w-100 btn btn-lg contact-btn">Restablecer contraseña</button>
                        </form>
                  
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
