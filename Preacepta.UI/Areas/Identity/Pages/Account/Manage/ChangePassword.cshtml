@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Cambio de contraseña";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h2>@ViewData["Title"]</h2>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">

    <form id="change-password-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <div class="form-group">
                <label asp-for="Input.OldPassword" class="form-label"></label>
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Por favor, introduzca su contraseña actual." />

                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-floating mb-3">
            <div class="form-group">
                <label asp-for="Input.NewPassword" class="form-label"></label>
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Por favor, introduzca su nueva contraseña." />

                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-floating mb-3">
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Por favor confirme su nueva contraseña." />

                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class=" w-100 contact-btn--primario btn-lg">Actualizar</button>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
